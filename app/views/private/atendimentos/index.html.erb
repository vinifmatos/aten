<p id="notice"><%= notice %></p>

<h1>Atendimentos</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Ano</th>
      <th>Assunto</th>
      <th>Data abertura</th>
      <th>Data finalizacao</th>
      <th>Data arquivamento</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atendimentos.each do |atendimento| %>
      <tr>
        <td><%= atendimento.numero %></td>
        <td><%= atendimento.ano %></td>
        <td><%= atendimento.assunto_id %></td>
        <td><%= atendimento.data_abertura %></td>
        <td><%= atendimento.data_finalizacao %></td>
        <td><%= atendimento.data_arquivamento %></td>
        <td><%= atendimento.texto %></td>
        <td><%= link_to 'Show', atendimento %></td>
        <td><%= link_to 'Edit', edit_atendimento_path(atendimento) %></td>
        <td><%= link_to 'Destroy', atendimento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

